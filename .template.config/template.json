{
    "$schema": "http://json.schemastore.org/template",
    "author": "Matt Utley",
    "classifications": [
        "Common",
        "Code"
    ],
    "identity": "meutley.clean.arch.webapi",
    "name": ".NET Core 3.1 Web API with Clean Architecture / DDD and RavenDB",
    "shortName": "clean-arch-webapi",
    "sourceName": "SourceName",
    "tags": {
        "language": "C#",
        "type": "item"
    },
    "sources": [
        {
            "exclude": [
                ".git/**",
                ".template.config/**",
                ".vscode/**"
            ],
            "modifiers": [
                {
                    "condition": "(UseRaven)",
                    "exclude": ["**/SourceName.Infrastructure/Pg/**"]
                },
                {
                    "condition": "(UsePg)",
                    "exclude": ["**/SourceName.Infrastructure/Raven/**"]
                }
            ]
        }
    ],
    "SpecialCustomOperations": {
        "**/*.csproj": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "actionableIf": [ "<!--#if" ],
                        "actionableElse": [ "#else", "<!--#else" ],
                        "actionableElseif": [ "#elseif", "<!--#elseif" ],
                        "endif": [ "#endif", "<!--#endif" ],
                        "trim" : "true",
                        "wholeLine": "true"
                    }
                }
            ]
        }
    },
    "symbols": {
        "DbProvider": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "Raven",
                    "description": "Use RavenDB"
                },
                {
                    "choice": "Postgres",
                    "description": "Use PostgreSQL"
                }
            ],
            "defaultValue": "Postgres",
            "isRequired": true
        },
        "UseRaven": {
            "type": "computed",
            "value": "(DbProvider == \"Raven\")"
        },
        "UsePg": {
            "type": "computed",
            "value": "(DbProvider == \"Postgres\")"
        }
    },
    "postActions": [
    {
      	"condition": "(!skipRestore)",
      	"description": "Restore NuGet packages required by this project.",
      	"manualInstructions": [
		{ "text": "Run 'dotnet restore'" }
      	],
        "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
		"continueOnError": true
        }
    ],
    "guids": [
